{
    "compilerOptions": {
      "target": "esnext",
      "module": "ES6",
      "strict": true,
      "jsx": "preserve",
      "importHelpers": true,
      "moduleResolution": "node",
      "experimentalDecorators": true,
      "emitDecoratorMetadata": true,
      "allowSyntheticDefaultImports": true,
      "sourceMap": true,
      "baseUrl": ".",
      "paths": {
        "@/*": [
          "src/*"
        ]
      },
      "lib": [
        "es2015",
        "dom",
        "dom.iterable",
        "scripthost",
      ],
      "typeRoots" : ["./src/typings"]
    },
    "include": [
      "src/**/*",
    ],
    "exclude": [
      "node_modules"
    ]
  }
  